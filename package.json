{
    "name": "@aklesky/node-workspace",
    "version": "0.5.0",
    "license": "MIT",
    "private": true,
    "type": "commonjs",
    "prettier": "./packages/prettier-config/dist/config",
    "scripts": {
        "setup": "lerna bootstrap",
        "setup:ci": "lerna bootstrap --ci",
        "build": "lerna run build",
        "link:workspace": "lerna link",
        "lint": "lerna run lint",
        "release:ci": "lerna publish --create-release github --yes",
        "test": "lerna run test"
    },
    "workspaces": ["packages/*"],
    "devDependencies": {
        "lerna": "7.1.5",
        "typescript": "5.1.6"
    }
}
