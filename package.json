{
    "name": "@aklesky/node-workspace",
    "version": "0.5.0",
    "license": "MIT",
    "private": true,
    "type": "commonjs",
    "prettier": "@aklesky/prettier-config",
    "scripts": {
        "setup": "lerna bootstrap",
        "setup:ci": "lerna bootstrap --ci",
        "build": "lerna run build",
        "lint": "lerna run lint",
