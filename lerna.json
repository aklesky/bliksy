{
    "packages": ["packages/*", "examples/*"],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "publishConfig": {
        "access": "public"
    },
    "command": {
        "add": {
            "exact": true
        },
        "create": {
            "access": "public",
            "license": "MIT",
            "esModule": true
        },
        "version": {
            "conventionalCommits": true,
            "private": false,
            "exact": true,
            "ammend": true,
            "message": "chore(release): publish %s"
        }
    },
    "ignoreChanges": ["**/__fixtures__/**", "**/__mocks__/**", "**/__tests__/**", "**/*.md"],
    "version": "independent"
}
