{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "composite": false,
        "target": "ES5",
        "moduleResolution": "Node",
        "declaration": true,
        "esModuleInterop": true
    },
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/__tests__"]
}
