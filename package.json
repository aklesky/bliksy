        "test": "lerna run test"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "lerna": "7.4.2",
        "rimraf": "5.0.5",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    }
}
